# EditorConfig helps maintain consistent coding styles for multiple developers
# working on the same project across various editors and IDEs.
# See: https://editorconfig.org/

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files  
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2

# HTML/CSS files
[*.{html,css,scss}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,toml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Makefiles require tabs
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Docker files
[{Dockerfile,*.dockerfile}]
indent_size = 2

# GitHub Actions
[.github/workflows/*.yml]
indent_size = 2

# Git files
[{.gitignore,.gitattributes}]
indent_size = 2